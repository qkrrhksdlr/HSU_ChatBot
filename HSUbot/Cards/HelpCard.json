                    {
                      "title": "답변",
                      "value": "한성공지:https://www.hansung.ac.kr/web/www/cmty_01_01학사공지:https://www.hansung.ac.kr/web/www/cmty_01_03"
                    }
                  ]
                }
              ]
            }
          },
          {
            "type": "Action.ShowCard",
            "title": "장학제도 자세히보기",
            "card": {
              "type": "AdaptiveCard",
              "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
              "body": [
                {
                  "type": "TextBlock",
